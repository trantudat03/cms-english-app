{
  "kind": "collectionType",
  "collectionName": "refresh_tokens",
  "info": {
    "singularName": "refresh-token",
    "pluralName": "refresh-tokens",
    "displayName": "Refresh Token",
    "description": "Stores hashed refresh tokens for session management with rotation"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "tokenHash": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "expiresAt": {
      "type": "datetime",
      "required": true
    },
    "isRevoked": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "deviceInfo": {
      "type": "string"
    }
  }
}
