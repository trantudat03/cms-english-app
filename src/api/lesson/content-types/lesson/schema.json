{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": "Lesson configuration referencing a question bank"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "column": {
        "notNullable": true
      }
    },
    "description": {
      "type": "text"
    },
    "background": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "backgroundColor": {
      "type": "string"
    },
    "mascot": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "lessonType": {
      "type": "enumeration",
      "enum": [
        "lesson",
        "quiz",
        "test"
      ],
      "default": "quiz"
    },
    "questionBank": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::question-bank.question-bank",
      "inversedBy": "lessons",
      "required": true
    },
    "questionCount": {
      "type": "integer"
    },
    "timeLimit": {
      "type": "integer"
    },
    "passScore": {
      "type": "integer"
    },
    "retryPolicy": {
      "type": "json",
      "default": {}
    },
    "shuffleQuestions": {
      "type": "boolean"
    },
    "showExplanationOnSubmit": {
      "type": "boolean",
      "default": false
    },
    "attempts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson-attempt.lesson-attempt",
      "mappedBy": "lesson"
    }
  }
}
